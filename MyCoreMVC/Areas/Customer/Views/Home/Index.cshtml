@model IEnumerable<Product>

<div class="row py-3">
  @foreach (var product in Model)
  {
    <div class="col-lg-4 col-sm-6">
      <div class="card border-0 p-3 shadow-lg  border-top border-5 rounded">
        <img src="@product.ImageUrl" class="card-img-top" style="min-height: 205px" />
        @* @if (product.ProductImages != null && product.ProductImages.Count() > 0)
        {
        <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
        }
        else
        {
        <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
        } *@

        <div class="card-body pb-0">
          <div class="text-center">
            <h4 class="card-title text-dark opacity-75">@product.Title</h4>
            @* <p class="card-title text-warning text-center">by <b>@product.Author</b></p> *@
          </div>
          <div class="ps-1">
            <p class="text-dark text-opacity-75 text-center mb-0">
              List Price:
              <span class="text-decoration-line-through">
                @product.ListPrice.ToString("c")
              </span>
            </p>
          </div>
          <div class="ps-1">
            <p class="text-danger text-center">
              As low as:
              <span>
                @product.Price100.ToString("c")
              </span>
            </p>
          </div>
        </div>
        <div>
          <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
            Details
          </a>
        </div>
      </div>
    </div>
  }

@model Company
@{
  ViewData["Title"] = $"{(Model.Id == 0 ? "新增" : "編輯")}公司";
}

<div class="card shadow border-0 bg-body-tertiary mt-4">
  <div class="card-header bg-primary bg-gradient">
    <h2 class="text-white text-center mb-0">
      @(Model.Id == 0 ? "新增" : "編輯")公司
    </h2>
  </div>
  <div class="card-body p-4">
    <form method="post" class="row">
      <input asp-for="Id" type="hidden" />

      <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly"></div>*@
        @* 名稱 *@
        <div class="py-2 col-12">
          <label asp-for="Name" class="mb-2"></label>
          <input asp-for="Name" class="form-control border-0 shadow" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @* PhoneNumber *@
        <div class="py-2 col-12">
          <label asp-for="PhoneNumber" class="mb-2"></label>
          <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
          <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        @* City *@
        <div class="py-2 col-12">
          <label asp-for="City" class="mb-2"></label>
          <input asp-for="City" class="form-control border-0 shadow" />
          <span asp-validation-for="City" class="text-danger"></span>
        </div>
        @* Zone *@
        <div class="py-2 col-12">
          <label asp-for="Zone" class="mb-2"></label>
          <input asp-for="Zone" class="form-control border-0 shadow" />
          <span asp-validation-for="Zone" class="text-danger"></span>
        </div>
        @* PostalCode *@
        <div class="py-2 col-12">
          <label asp-for="PostalCode" class="mb-2"></label>
          <input asp-for="PostalCode" class="form-control border-0 shadow" />
          <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        @* Address *@
        <div class="py-2 col-12">
          <label asp-for="Address" class="mb-2"></label>
          <input asp-for="Address" class="form-control border-0 shadow" />
          <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="row pt-2">
          <div class="col-6 col-md-3">
            @if (Model.Id == 0)
            {
              <button type="submit" class="btn btn-primary form-control">新增</button>
            }
            else
            {
              <button type="submit" class="btn btn-primary form-control">修改</button>
            }
          </div>
          <div class="col-6 col-md-3">
            <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">
              Back to List
            </a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@*client side validation*@
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}